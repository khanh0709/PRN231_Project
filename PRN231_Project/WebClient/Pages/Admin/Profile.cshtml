@page
@using CoFAB.Business.DTO;
@model CoFAB.Pages.Admin.ProfileModel
@{
    Layout = "AdminShared/_Layout";
}
<h1>Admin Profile</h1>
<p style="font-weight: 500;">CoFAB Event Management Software</p>
<form id="profile-form" method="post">
    <label>Id</label>
    <input readonly class="form-control" type="text" value="@Model.User?.UserId" />
    <label>Tên</label>
    <input readonly name="fullname" class="form-control" type="text" value="@Model.User?.FullName" />
    <label>Email</label>
    <input readonly name="email" class="form-control" type="text" value="@Model.User?.Email" />
    <label>City</label>
    <select disabled class="form-select">
        @foreach(Province p in Model.Provinces)
        {
            @if(p.Code == Model.User?.City)
            {
                <option selected value="@p.Code">@p.Name</option>

            }
            else
            {
                <option value="@p.Code">@p.Name</option>
            }
        }
    </select>
@*    <div class="py-3">
        <button class="fab-btn">Lưu</button>
    </div>*@
</form>