<style>
    body {
        border: none;
        margin: 0;
        box-sizing: border-box;
        font-family: Montserrat;
        background-color: black;
        overflow-x: hidden;
    }

    a {
        text-decoration: none;
    }

        a:hover {
            text-decoration: none;
        }

    .nav-action a:hover,
    .nav-item a {
        opacity: 0.8;
    }

    .red {
        background-color: #E71B3D;
    }

    .header {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .header-background {
        width: 100%;
        opacity: 0.8;
        height: 100vh;
        background-size: cover;
        background-image: linear-gradient(180deg, transparent 0, 80%, black), url(/images/background.jpg);
        /* background-image: linear-gradient(180deg,#000 0,rgba(0,0,0,.6)),url(background.jpg); */
        background-position: center;
    }

    .logo {
        width: 180px;
    }

    .logo-wrapper {
        position: absolute;
        top: 0;
        left: 0;
    }

    .nav {
        position: absolute;
        top: 30px;
        left: 10%;
        right: 10%;
    }

    .nav-list {
        width: 80%;
        list-style: none;
        display: flex;
        justify-content: start;
        align-items: center;
        padding-right: 200px;
    }

    .nav-item {
        padding: 10px;
        margin-right: 10px;
    }

        .nav-item a {
            color: white;
            font-size: 20px;
        }

    .nav-action {
        width: 20%;
    }

        .nav-action a {
            color: white;
            padding: 10px;
            margin-right: 10px;
            font-size: 20px;
        }

    .about {
        margin-top: 40px;
        color: white;
    }

        .about .h2 {
            font-size: 60px;
            font-weight: 400;
            margin: 0;
            line-height: 110%;
        }

        .about .p {
            font-weight: 400;
            font-size: 20px;
            line-height: 150%;
        }

    .slider {
        background-color: black;
    }

    .slider-img {
        width: 100%;
    }

    .splide__pagination__page {
        background: #ccc;
        border: 0;
        border-radius: 2.5px;
        display: inline-block;
        height: 5px;
        margin: 3px;
        padding: 0;
        position: relative;
        transition: background-color .2s linear;
        width: 20px;
    }

    .splide__arrow {
        align-items: center;
        background: #0000;
        border: 0;
        border-radius: 0;
        cursor: pointer;
        display: flex;
        height: 2.5em;
        justify-content: center;
        padding: 0;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 2.5em;
        z-index: 1;
    }

    .splide__arrow--prev:focus,
    .splide__arrow--next:focus {
        outline: none;
    }

    .carousel-image {
        background-size: contain;
        background-position: top;
        height: 80vh;
        opacity: 0.75;
        object-fit: cover;
    }

    .carousel-caption {
        bottom: 50%;
        transform: translateY(50%);
    }

        .carousel-caption h2 {
            font-weight: bold;
            color: white;
            text-shadow: 0px 0px 6px rgb(0 0 0);
            font-size: 24px;
        }

        .carousel-caption p {
            font-size: 16px;
        }

    .articles-header {
        font-size: 40px;
        font-weight: 500;
        /* margin: 80px 0; */
        text-align: center;
        color: white;
        padding: 50px 0 0 0;
        /* background-image: url(border.png); */
    }

    .articles-item {
        height: 300px;
        overflow: hidden;
        position: relative;
        margin: 10px 0;
    }

    .articles-img {
        width: 100%;
        height: 100%;
        border: 2px solid #ffffffcc;
        object-fit: cover;
    }

    .articles-text {
        position: absolute;
        left: 15px;
        right: 15px;
        bottom: 0;
        /* transform: translate(-50%, -50%); */
        color: white;
        background-color: rgba(0, 0, 0, .75);
        padding: 16px 24px;
        border-left: 2px solid #ffffffcc;
        border-right: 2px solid #ffffffcc;
        border-bottom: 2px solid #ffffffcc;
    }

    .articles-title {
        font-size: 20px;
        font-weight: 500;
    }

    .articles-time {
        font-size: 14px;
    }

    /* h1,
                    h2,
                    .articles-title,
                    .articles-time {
                        font-family: capitolium-2, serif;
                    } */

    .articles-body {
        display: flex;
        justify-content: center;
        padding-bottom: 100px;
        padding-top: 50px;
    }

    .articles-list {
        width: 60%;
    }

    .articles {
        background-repeat: no-repeat;
        background-size: cover;
        background-image: linear-gradient(180deg, transparent 0, 50%, #350b0b, black), url(https://cdn.pixabay.com/photo/2014/06/16/23/39/dark-red-370119_1280.png);
    }

    .footer {
        color: white;
    }

    .footer-logo {
        width: 40%;
        border-radius: 50%;
        margin-left: 40px;
    }

    .footer-icon {
        color: white;
        font-size: 30px;
    }

    .footer-left {
        padding: 24px 64px;
    }

    .footer-right {
        padding: 24px 64px;
    }

    .logo-img {
        width: auto;
        height: 100px;
        border-radius: 50%;
        transform: translateY(31px);
    }

    .nav-container {
        color: #000;
        height: 70px;
        /* background: linear-gradient(180deg, rgba(0, 0, 0, 0.313), white); */
        background-image: linear-gradient(180deg, black 0, black);
    }

    .nav-link {
        color: white;
        margin: 20px;
        font-size: 18px;
        padding: 0 !important;
    }

    .logo-box {
        /* position: absolute;
                        top: -10px; */
    }

    .collapse.navbar-collapse {
        margin-left: 150px;
    }


    .border-st-btm-5 {
        border-bottom: 5px solid !important;
        border-image-repeat: repeat !important;
        border-image-slice: 7.5 !important;
    }

    .border-st {
        border: 0;
        border-image-source: url(https://img.freepik.com/premium-photo/hand-painted-pastel-watercolor-background_297030-3854.jpg);
    }

    .white-border {
        width: 20%;
        border: 1px solid white;
    }

    .fab-btn {
        background-color: #873229;
        border: 2px solid #f7e4e4;
        border-radius: 0;
        color: white;
        display: inline-block;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        padding: 0.2rem 0.5rem;
        text-align: center;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        vertical-align: middle;
        white-space: nowrap;
    }

    .fab-list {
        list-style: none;
    }

    .link-hover:hover, .link-hover i:hover {
        color: #ffffff66;
    }

    .header-img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 25%;
        border-radius: 50%;
        /*background-color: #ffffff2b;*/
    }

    .btn-hover:hover {
        background-color: #ab5d55;
        color: white;
    }
    /*res*/
    @@media only screen and (max-width: 1000px) {
        .container {
            flex-wrap: nowrap !important;
        }

        .collapse.navbar-collapse {
            margin-left: 0 !important
        }

        .collapse:not(.show) {
            display: flex !important;
        }

        .navbar-nav {
            flex-direction: row;
        }
    }

    @@media only screen and (max-width:768px) {
        .logo-img {
            height: 74px;
        }

        .carousel-image {
            height: 60vh;
        }
    }

    @@media only screen and (max-width: 576px) {
        .collapse {
            flex-direction: column;
        }

        .mr-auto {
            margin: 0 !important;
        }

        .carousel-image {
            height: 30vh;
        }

        .header-background {
            height: 33vh;
        }

        .articles-title {
            font-size: 14px;
        }

        .articles-text {
            padding: 8px 10px;
        }

        h1{
            font-size: 26px;
        }

        .navbar {
            height: 100px !important;
        }

        .nav-link {
            margin: 0 20px 10px 20px;
        }

        .nav-link, .fab-btn, h5 {
            font-size: 14px;
        }

        .carousel-caption h2 {
            font-size: 12px;
        }

        .carousel-caption p {
            font-size: 10px;
        }
    }

/*    @@media only screen and (max-width: 410px) {
        
    }*/
</style>
